/* miniprogram/pages/userCenter.wxss */

.intro{
  /* padding: 100rpx; */
  font-size: 30rpx;
  line-height: 50rpx;
  color: black;
}
.flex-center{
  display: flex;
  justify-content: start;
  align-items: center;
  border: 2rpx solid;
  border-color: #DCDCDC;
}

.phone{
  /* background-color: white; */
  text-align: center;
  color: black;
  letter-spacing: 2rpx;
  line-height: 80rpx;
  width: 300rpx;
}
.mask{
  width:100%;
  height:100%;
  position:fixed;
  background-color:#999;
  z-index:999;
  top:0;
  left:0;
  opacity:0.5;
}
.getPhoneBtn{
  /* width: 230rpx; */
  font-size: 20px;
  font-weight: normal;
  /* background-color: white; */
}

.getPhoneBtn::after{
  border: 0;
}

.loginBtn{
  margin: 30px;
  color: white;
  width: 400rpx;
  font-weight: normal;
  letter-spacing: 2rpx;
}

.loginBtn::after{
  border: 0;
}

.checkbox{
  color: black;
  line-height: 50rpx;
  margin-top: 15px;
  justify-content: start;
}

.card{
  width: 90vw;
  border-radius: 10px;
  border: 1px solid #DCDCDC;
  margin-top: 10px;
  color: black;
}

.wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}